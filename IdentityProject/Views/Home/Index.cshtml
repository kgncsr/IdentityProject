<div class="card">
    <div class="card-header">
        Welcome
    </div>
    <div class="card-body">
        <h5 class="RegisterPage"></h5>
        <p class="card-text">Login or Register Pls</p>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
<span>@User.Identity.Name</span>
    <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Oturumu Kapat</a>
}
else
{
<a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login</a>
<a asp-action="Register" asp-controller="Account" class="btn btn-dark">Register</a>
}